export PATH="~/Library/Android/sdk/tools/bin:/usr/local/sbin:/usr/local/bin:/usr/local/opt/gnu-sed/libexec/gnubin:/usr/local/opt/gpg-agent/libexec:$PATH:$HOME/bin:$HOME/.bash/bin"
MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

export ANDROID_SDK_ROOT=~/Library/Android/sdk
export ANDROID_HOME=$ANDROID_SDK_ROOT
export ANDROID_NDK=$ANDROID_SDK_ROOT/ndk-bundle
export PATH=$ANDROID_HOME/emulator:$ANDROID_HOME/tools:$PATH

export LANGUAGE="en_GB.UTF-8"

#EDITOR='vim'
#EDITOR='/usr/local/bin/mvim -f'
#EDITOR='atom -w'
#EDITOR='subl -w'
#export EDITOR

export THEFUCK_RULES='DEFAULT_RULES:git_push_force'

# Setup for iTerm
set -g default-terminal "xterm-256color"

# Colours
export CLICOLOR='true'
export LSCOLORS="gxfxcxdxbxegedabagacad"

# brew zsh plugins
source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh
fpath=(/usr/local/share/zsh-completions $fpath)
source "/usr/local/opt/zsh-git-prompt/zshrc.sh"
source /usr/local/share/zsh-history-substring-search/zsh-history-substring-search.zsh
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# GPG
# Add the following to your shell init to set up gpg-agent automatically for every shell
export KEYGRIP=$(gpg --fingerprint --fingerprint | grep fingerprint | tail -1 | cut -d= -f2 | sed -e 's/ //g')

# ssh
export SSH_KEY_PATH="~/.ssh/rsa_id"

if ssh-add -l | grep -q 'no identities'; then;
  read "response?Add SSH key? [y/N] "
  response=${response:l} #tolower
  if [[ $response =~ ^(yes|y) ]]; then
    ssh-add
  fi
fi

# HSTR configuration - add this to ~/.bashrc
alias hh=hstr                    # hh to be alias for hstr
export HISTFILE=~/.zsh_history  # ensure history file visibility
export HSTR_CONFIG=hicolor        # get more colors
bindkey -s "\C-r" "\eqhstr\n"     # bind hstr to Ctrl-r (for Vi mode check doc)

export HOMEBREW_NO_ANALYTICS=1
